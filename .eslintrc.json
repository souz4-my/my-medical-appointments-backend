{
	"env": {
		"es2021": true,
		"node": true,
		"jest": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"prettier",
		"plugin:import/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint",
		"prettier"
	],
	"rules": {
		"indent": "off",
		"prettier/prettier": "error",
		"no-duplicate-imports": "error",
		"prefer-const": "error",
		"prefer-destructuring": "error",
		"prefer-spread": "error",
		"prefer-template": "error",
		"import/no-unresolved": [
			"off"
		],
		"import/extensions": [
			"error",
			{
				"typescript": "never"
			}
		]
	}
}
